{
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "npm run dev:frontend",
        "dev:frontend": "vite --mode frontend",
        "dev:cp": "vite --mode cp",
        "dev:cp:watch": "vite build --watch --mode cp --minify false --sourcemap",
        "build": "npm run build:frontend && npm run build:cp",
        "build:frontend": "vite build --mode frontend",
        "build:frontend:watch": "npm run build:frontend -- --watch",
        "build:cp": "vite build --mode cp",
        "build:cp:watch": "npm run build:cp -- --watch"
    },
    "devDependencies": {
        "@statamic/cms": "file:./vendor/statamic/cms/resources/dist-package",
        "@tailwindcss/vite": "^4.0.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "glob": "^13.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.1.12",
        "vite": "^7.1.3",
        "axios": "^1.13.4"
    }
}
